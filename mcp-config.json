{
  "mcpServers": {
    "puppeteer": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "DOCKER_CONTAINER", "mcp/puppeteer"],
      "env": {
        "DOCKER_CONTAINER": "true"
      }
    },
    "playwright": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/playwright"
      ]
    },
    "fetch": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "mcp/fetch"
      ]
    },
    "browseruse": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-p", "8080:8080", "browseruse/browseruse:buildcache"],
      "env": {
        "DISPLAY": ":99"
      }
    }
  }
}
